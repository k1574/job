#!/usr/bin/env python3

import tkinter.filedialog as fd
import tkinter as Tk
from PIL import Image, ImageTk

class App:
	def __init__(self):
		self.Root = Tk.Tk()
		self.Root.bind("l", self.loadNew)

		self.Frame = Tk.Frame(self.Root)
		self.Frame.grid()
		self.loadNew()

	def Start(self):
		self.Root.mainloop()

	def loadNew(self, *args):
		path = fd.askopenfilename()
		self.Image = Image.open(path)

		self.Canvas = Tk.Canvas(self.Root, width=self.Image.size[0], height=self.Image.size[1])
		print(self.Image.size[0], self.Image.size[1])

		self.Photo = ImageTk.PhotoImage(self.Image)
		self.CanvasImage = self.Canvas.create_image(0, 0, anchor="nw", image=self.Photo)
		self.Canvas.place(relx=0.5, rely=0.5, anchor=Tk.CENTER)

app = App()
app.Start()

